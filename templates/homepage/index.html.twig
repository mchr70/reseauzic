{% extends 'base.html.twig' %}

{% block title %}Hello HomePageController!{% endblock %}

{% block body %}
    
    {% if users %}
        {% if app.user and app.user.zipCode %}
            {% if app.user.genres %}
                {% for genre in app.user.genres %}
                    <h3>Derniers inscrits dans votre d√©partement ({{ app.user.departement.name }}) en {{ genre.name }}</h3>
                    {% for user in users %}
                        {% for user1 in user %}
                            {% if user1 != app.user %}
                            <li><a href="{{ path('member_profile', {"id":user1.id}) }}">{{ user1.username }}</a></li>
                            {% endif %}
                        {% endfor %}
                    {% endfor %}
                {% endfor %}
                
            {% endif %}
        {% else %}

        {% endif %}
        
    {% else %}
        Pas encore d'inscrits
    {% endif %}

{% endblock %}
